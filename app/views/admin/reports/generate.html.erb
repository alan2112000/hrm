<br>

<div class="container">
  <div class="row clearfix">
    <div class="col-md-12 column">
      <table class="table">
        <% @users.each do |index, records| %>
            <thead>
            <tr>
              <th>User</th>
              <th>Record Type</th>
              <th>Start Time</th>
              <th>End Time</th>
              <th>Total Time</th>
            </tr>
            </thead>
            <tbody>
            <% records.each do |record| %>
                <tr>
                  <td><%= record.user.name %></td>
                  <td><%= record.type.name %></td>
                  <td> <%= record.start_time.to_s %> </td>
                  <td> <%= record.end_time %></td>
                  <td><%= (record.end_time - record.start_time) %></td>
                </tr>
            <% end %>
            <tr>
              <th>Total Over Time</th>
              <th>Total Absence</th>
              <th>Annual Leave</th>
            </tr>
            <tr>
              <td>user.over_time</td>
              <td>user.absence</td>
              <td>user.annual_leave</td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
