<%= form_for(@record_form, { url: @record_form.url, class: 'form-horizontal' }) do |f| %>

    <div class="field">
      <%= f.label :start_time %><br>

      <div class="form-group form-inline">
        <%= f.datetime_select :start_time, {}, { class: 'form-control' } %>
      </div>
    </div>
    <div class="field">
      <div class="form-group form-inline">
        <%= f.label :end_time %><br>
        <%= f.datetime_select :end_time, {},class: 'form-control' %>
      </div>
    </div>
    <div class="field">
      <%= f.label :type_id %><br>
      <%= f.collection_select(:type_id, f.object.types, :id, :name, {prompt: 'Please Select'}, {class: 'form-control'}) %>
    </div>
    <div class="actions">
      <%= f.submit class: 'btn btn-default' %>
    </div>
<% end %>

