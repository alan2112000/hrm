<%= form_for(@user) do |f| %>
    <div class="container">
      <div class="row clearfix">
        <div class="col-md-12 column">
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="actions">
            <%= f.submit class: 'btn btn-default' %>
          </div>
        </div>
      </div>
    </div>
<% end %>
